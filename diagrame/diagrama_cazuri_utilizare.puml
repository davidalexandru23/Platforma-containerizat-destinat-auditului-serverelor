@startuml diagrama_cazuri_utilizare
!theme plain
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam linetype ortho

title Diagrama Cazuri de Utilizare

actor "Admin" as Admin
actor "Auditor" as Auditor  
actor "Viewer" as Viewer
actor "Agent" as Agent

rectangle "Platforma BitTrail" {
    
    rectangle "Autentificare" {
        usecase "Login" as UC1
        usecase "Logout" as UC2
        usecase "Inregistrare" as UC3
    }
    
    rectangle "Gestiune Servere" {
        usecase "Adauga Server" as UC4
        usecase "Vizualizeaza Servere" as UC5
        usecase "Sterge Server" as UC6
        usecase "Genereaza Token Enrollment" as UC7
        usecase "Vizualizeaza Metrici Live" as UC8
        usecase "Vizualizeaza Inventar" as UC9
    }
    
    rectangle "Gestiune Template-uri" {
        usecase "Import Template CIS" as UC10
        usecase "Vizualizeaza Template" as UC11
        usecase "Editeaza Controale" as UC12
    }
    
    rectangle "Executie Audit" {
        usecase "Initiaza Audit" as UC13
        usecase "Vizualizeaza Progres Audit" as UC14
        usecase "Incarca Evidenta" as UC15
        usecase "Aproba Task Manual" as UC16
        usecase "Vizualizeaza Rezultate" as UC17
    }
    
    rectangle "Gestiune Utilizatori" {
        usecase "Creeaza Utilizator" as UC18
        usecase "Atribuie Rol" as UC19
        usecase "Gestioneaza Permisiuni" as UC20
    }
    
    rectangle "Comunicare Agent" {
        usecase "Inrolare Agent" as UC21
        usecase "Trimite Metrici" as UC22
        usecase "Trimite Inventar" as UC23
        usecase "Executa Verificari" as UC24
        usecase "Trimite Rezultate" as UC25
    }
}

